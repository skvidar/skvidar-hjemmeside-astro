---
export interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body>
		<header>
			<nav>
				<a href="/">Nyheter</a>
				<a href="/omklubben">Om klubben</a>
			</nav>
		</header>
		<h1>{title}</h1>
		<article>
			<slot />
		</article>
	</body>
</html>
